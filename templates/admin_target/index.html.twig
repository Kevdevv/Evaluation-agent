{% extends 'base.html.twig' %}

{% block title %}Target index{% endblock %}

{% block body %}
    <h1>Target index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Birth</th>
                <th>Name_code</th>
                <th>Nationality</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for target in targets %}
            <tr>
                <td>{{ target.id }}</td>
                <td>{{ target.lastname }}</td>
                <td>{{ target.firstname }}</td>
                <td>{{ target.birth ? target.birth|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ target.nameCode }}</td>
                <td>{{ target.nationality }}</td>
                <td>
                    <a href="{{ path('app_admin_target_show', {'id': target.id}) }}">show</a>
                    <a href="{{ path('app_admin_target_edit', {'id': target.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_target_new') }}">Create new</a>
{% endblock %}
