{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Nom de famille</th>
                <td>{{ contact.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.firstname }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ contact.birth ? contact.birth|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom de code</th>
                <td>{{ contact.nameCode }}</td>
            </tr>
            <tr>
                <th>Nationalité</th>
                <td>{{ contact.nationality }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_contact_index') }}">back to list</a>

    <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('admin_contact/_delete_form.html.twig') }}
{% endblock %}
