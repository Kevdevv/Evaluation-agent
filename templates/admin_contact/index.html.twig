{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Birth</th>
                <th>Name_code</th>
                <th>Nationality</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.lastname }}</td>
                <td>{{ contact.firstname }}</td>
                <td>{{ contact.birth ? contact.birth|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contact.nameCode }}</td>
                <td>{{ contact.nationality }}</td>
                <td>
                    <a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_contact_new') }}">Create new</a>
{% endblock %}
